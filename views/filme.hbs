                <input type="hidden" value="{{filme.imagem}}" class="form-control" id="imagem" name="imagem" readonly>
            </div>

              <div class="form-group">
                <input type="hidden" value="{{filme.id_filme}}" class="form-control" id="id_reference" name="id_reference" readonly>
            </div>

            


            <br>
            <button type="submit" class="btn btn-primary"> Add to Favourites</button>
    </form>
</div>
</div>
</div>
</form>

