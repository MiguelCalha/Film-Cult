<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4"> {{show.nome}} </h1>

        <div class="col-3"><img src="{{show.imagem}}" /></div>
        <div class="col-4">
            <h1>{{show.nome}}</h1>
            <h2>Director: {{show.realizador}}</h2>
            <h2>Genre: {{show.genero}}</h1>
                <h2>{{show.sobre}}</h1>
                    <h2>Cast: {{show.elenco}}</h1>
                    <h2>Seasons: {{show.temporadas}}</h1>
                    <h2>Episodes: {{show.episodios}}</h1>
                        <div class="form-group">
                            <label for="image"> </label>
                        </div>

        </div>
    </div>
</div>


<div class="jumbotron">
    <div class="container mt-4"></div>
    <iframe width="1280" position=" center" height="720" src="{{show.trailer}}" frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </iframe>
</div>


<div class="card-body">
    <form action="/shows/addSeen" method="POST">
        <div class="form-group">
            <h2>Add to Seen</h2>

            <div class="form-group">
                <input type="hidden" value="{{show.nome}}" class="form-control" id="nome" name="nome" readonly>

            </div>

            <div class="form-group">
                <input type="hidden" value="{{show.imagem}}" class="form-control" id="imagem" name="imagem" readonly>
            </div>

            <div class="form-group">
                <input type="hidden" value="{{show.id_serie}}" class="form-control" id="id_reference"
                    name="id_reference" readonly>
            </div>



            <br>
            <button type="submit" class="btn btn-primary"> Add to Seen</button>
    </form>
</div>
</div>
</div>
</form>

<div class="card-body">
    <form action="/shows/addFav" method="POST">
        <div class="form-group">
            <h2>Add to Favourites</h2>

            <div class="form-group">
                <input type="hidden" value="{{show.nome}}" class="form-control" id="nome" name="nome" readonly>
            </div>

            <div class="form-group">
                <input type="hidden" value="{{show.imagem}}" class="form-control" id="imagem" name="imagem" readonly>
            </div>


            <div class="form-group">
                <input type="hidden" value="{{show.id_serie}}" class="form-control" id="id_reference"
                    name="id_reference" readonly>
            </div>

            <br>
            <button type="submit" class="btn btn-primary"> Add to Favourites</button>
    </form>
</div>
</div>
</div>
</form>

